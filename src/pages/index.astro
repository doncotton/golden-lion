---
import Layout from '../layouts/Layout.astro'
import { Image } from 'astro:assets';
import BathroomRemodel from "@/assets/background/remodel_bathroom.avif"
import KitchenRemodel from "@/assets/background/remodel_kitchen.avif"
---

<Layout title="Golden Lion Construction and Design | Coming Soon">
    <section class="py-10 h-full w-full bottom-0 top-0 my-auto mx-auto flex items-center justify-center">
        <div class="container mx-auto px-4 h-full">
          <div class="flex flex-wrap -mx-2 h-full">
            <div class="w-full lg:w-1/2 px-2 mb-4 lg:mb-0">
              <div class="py-20 px-8 sm:px-20 bg-[var(--gray-1)] rounded-4xl">
                <div class="max-w-2xl mx-auto">
                  <div class="max-w-md mb-20 lg:mb-32">
                    <span class="inline-block mb-4 py-2 px-3 text-sm text-white leading-none border-1.5 border rounded-full transition duration-200">Golden Lion</span>
                    <h2 class="font-heading text-5xl sm:text-6xl lg:text-7xl tracking-tight mb-6">Coming soon</h2>
                    <p class="text-coolGray-60 mb-10">Crafting Dreams into Reality: Your Premier Partner in Home Construction, Remodeling, and Design.</p>
                    <a class="group inline-flex py-5 px-8 items-center justify-center leading-none font-medium text-white hover:text-white border rounded-full hover:bg-black transition duration-200" href="mailto:dlcotton.development@gmail.com">
                      <span class="mr-2">Send us an email</span>
                      <span class="group-hover:rotate-45 transform transition duration-100">
                        <svg width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M9 1L1 9" stroke="currentColor" stroke-width="1.3" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"></path>
                          <path d="M9 8.33571V1H1.66429" stroke="currentColor" stroke-width="1.3" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                      </span>
                    </a>
                  </div>
                  <div class="max-w-xs ml-auto text-right">
                    <span class="block mb-3 text-sm">2024</span>
                    <p class="text-coolGray-600">Transforming Spaces, Elevating Lifestyles: Experience Excellence with Our Home Construction, Remodeling, and Design Services.</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="w-5/12 lg:w-2/12 px-2">
                <Image src={BathroomRemodel}  class="w-full h-96 sm:h-112 md:h-150 lg:h-full rounded-4xl object-cover" decoding="async" loading="lazy" alt="A description of my image." />
            </div>
            <div class="w-7/12 lg:w-4/12 px-2">
                <Image src={KitchenRemodel}  class="w-full h-96 sm:h-112 md:h-150 lg:h-full rounded-4xl object-cover" decoding="async" loading="lazy" alt="A description of my image." />
            </div>
          </div>
        </div>
      </section>
</Layout>
